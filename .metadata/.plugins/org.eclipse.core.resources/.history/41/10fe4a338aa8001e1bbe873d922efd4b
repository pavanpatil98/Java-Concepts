package streamApi;
import java.util.*;
import java.util.stream.Collectors;
import java.util.stream.Stream;
class Pair{
    int start;
    int end;
    public Pair(int start,int end){
        this.start = start;
        this.end = end;
    }
}

class ArrayList_Array_Hacks {
